<style>
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .animate-gradient {
    background-size: 200% 200%;
    animation: gradient 15s ease infinite;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-in;
  }

  .modal-open {
    overflow: hidden;
  }

  .modal-hidden {
    display: none;
  }

  .carousel-indicator.active {
    background-color: white;
  }

  /* Modal transitions */
  #mechanicModal:not(.modal-hidden), #vehicleModal:not(.modal-hidden) {
    animation: modalFadeIn 0.18s cubic-bezier(0.4,0,0.2,1);
  }
  @keyframes modalFadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  #mechanicModalContent, #vehicleModalContent {
    transition: transform 0.18s cubic-bezier(0.4,0,0.2,1), opacity 0.18s cubic-bezier(0.4,0,0.2,1);
  }
</style>

<script>
  import { ModalManager } from '../scripts/modals';
  import { CarouselManager } from '../scripts/carousel';
  
  // Inicializar los manejadores cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', () => {
    ModalManager.getInstance();
    CarouselManager.getInstance();
  });
</script>

