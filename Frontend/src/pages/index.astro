---

import '../styles/global.css';

---

<head>
  <meta charset="UTF-8" />
  <title>Los Santos Customs</title>
  <link rel="icon" href="/media/PagePhotos/LogoIcon.ico" type="image/x-icon" />
  <link rel="shortcut icon" href="/media/PagePhotos/LogoIcon.ico" type="image/x-icon" />
</head>

<div class="flex flex-col min-h-screen">

  <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-indigo-500 py-12 px-4 shadow-lg animate-gradient">
    <div class="max-w-4xl mx-auto flex items-center justify-between">
      <div class="flex items-center gap-4">
        <img src="/media/PagePhotos/Logo.webp" alt="Los Santos Customs Logo" class="h-20 w-auto" />
        <h1 class="text-4xl font-extrabold text-white drop-shadow-lg hover:scale-105 transition-transform duration-300">Los Santos Customs</h1>
      </div>
      <div class="flex gap-4">
        <button id="mechanicLoginBtn" class="flex items-center gap-2 bg-white bg-opacity-80 hover:bg-opacity-100 p-3 rounded-full transition-all duration-300 hover:scale-105 hover:shadow-lg transform">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span class="text-indigo-600 font-semibold">Ingreso Mecánicos</span>
        </button>
        <button id="vehicleStatusBtn" class="flex items-center gap-2 bg-white bg-opacity-80 hover:bg-opacity-100 p-3 rounded-full transition-all duration-300 hover:scale-105 hover:shadow-lg transform">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
          <span class="text-indigo-600 font-semibold">Estado de Vehículo</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Carousel Section -->
  <div class="relative w-full h-[600px] overflow-hidden bg-gray-900">
    <div id="carousel" class="flex transition-transform duration-500 ease-in-out h-full">
      <div class="min-w-full h-full">
        <img src="/media/PagePhotos/FotoPortada1.jpg" alt="Taller Los Santos Customs 1" class="w-full h-full object-cover" />
      </div>
      <div class="min-w-full h-full">
        <img src="/media/PagePhotos/FotoPortada2.jpg" alt="Taller Los Santos Customs 2" class="w-full h-full object-cover" />
      </div>
    </div>
    
    <!-- Carousel Controls -->
    <button id="prevBtn" class="absolute left-4 top-1/2 -translate-y-1/2 bg-indigo-600/50 text-white p-2 rounded-full hover:bg-indigo-600/70 transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>
    <button id="nextBtn" class="absolute right-4 top-1/2 -translate-y-1/2 bg-indigo-600/50 text-white p-2 rounded-full hover:bg-indigo-600/70 transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>
    
    <!-- Carousel Indicators -->
    <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2">
      <button class="carousel-indicator w-3 h-3 rounded-full bg-white/50 hover:bg-white transition-colors" data-index="0"></button>
      <button class="carousel-indicator w-3 h-3 rounded-full bg-white/50 hover:bg-white transition-colors" data-index="1"></button>
    </div>
  </div>

  <!-- Modal para ingreso de mecánicos -->
  <div id="mechanicModal" class="modal-hidden fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 transition-opacity duration-200">
    <div class="bg-white p-8 rounded-lg shadow-xl w-[500px] transform transition-all duration-200 scale-95 opacity-0" id="mechanicModalContent">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Ingreso Mecánicos</h2>
        <button type="button" data-modal-close="mechanicModal" class="text-indigo-400 hover:text-indigo-700 transition-colors p-2 hover:bg-indigo-100 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <form id="mechanicForm" class="space-y-6">
        <div class="space-y-2">
          <label class="block text-sm font-medium text-gray-700">RUT</label>
          <div class="relative">
            <input type="text" name="rut" required pattern="^(\d{1,2}\.\d{3}\.\d{3}-[\dkK]|\d{1,2}\.\d{3}\.\d{3}-[\dkK])$" 
                   class="w-full px-4 py-3 rounded-lg border border-indigo-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-150"
                   placeholder="Ingrese su RUT">
            <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
              </svg>
            </div>
          </div>
        </div>
        <div class="space-y-2">
          <label class="block text-sm font-medium text-gray-700">PIN</label>
          <div class="relative">
            <input type="password" name="pin" required pattern="^\d{6}$" 
                   class="w-full px-4 py-3 rounded-lg border border-indigo-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-150"
                   placeholder="Ingrese su PIN">
            <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
          </div>
        </div>
        <div class="flex justify-end">
          <button type="submit" 
                  class="w-full px-6 py-3 text-sm font-medium text-white bg-gradient-to-r from-indigo-600 via-purple-600 to-indigo-700 hover:from-purple-700 hover:to-indigo-800 rounded-lg transition-all duration-150 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
            Ingresar
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal para estado de vehículo -->
  <div id="vehicleModal" class="modal-hidden fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 transition-opacity duration-200">
    <div class="bg-white p-8 rounded-lg shadow-xl w-[500px] transform transition-all duration-200 scale-95 opacity-0" id="vehicleModalContent">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Estado de Vehículo</h2>
        <button type="button" data-modal-close="vehicleModal" class="text-indigo-400 hover:text-indigo-700 transition-colors p-2 hover:bg-indigo-100 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <form id="vehicleForm" class="space-y-6">
        <div class="space-y-2">
          <label class="block text-sm font-medium text-gray-700">RUT</label>
          <div class="relative">
            <input type="text" name="rut" required pattern="^(\d{1,2}\.\d{3}\.\d{3}-[\dkK]|\d{1,2}\.\d{3}\.\d{3}-[\dkK])$" 
                   class="w-full px-4 py-3 rounded-lg border border-indigo-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-150"
                   placeholder="Ingrese su RUT">
            <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
              </svg>
            </div>
          </div>
        </div>
        <div class="space-y-2">
          <label class="block text-sm font-medium text-gray-700">Patente</label>
          <div class="relative">
            <input type="text" name="patente" required pattern="^[A-Z]{2}-[A-Z]{2}-[0-9]{2}$" 
                   class="w-full px-4 py-3 rounded-lg border border-indigo-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-150"
                   placeholder="Ingrese su Patente">
            <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z" />
