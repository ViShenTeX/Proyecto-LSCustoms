---
import Layout from '../layouts/Layout.astro';

const rut = Astro.url.searchParams.get('rut');
const patente = Astro.url.searchParams.get('patente');

let vehicle = null;
let errorMessage: string | null = null;

// Función para obtener el color según el estado (movida aquí)
function getStatusColor(status: string): string {
  const colors: { [key: string]: string } = {
    'En espera': 'yellow',
    'En revisión': 'blue',
    'En reparación': 'purple',
    'Listo para entrega': 'green',
    'Entregado': 'gray'
  };
  return colors[status] || 'gray';
}

if (rut && patente) {
  try {
    const response = await fetch(`http://localhost:3000/api/vehiculos/status?rut=${encodeURIComponent(rut)}&patente=${encodeURIComponent(patente)}`);
    
    if (!response.ok) {
      const errorData = await response.json().catch(() => ({ message: 'Error desconocido' }));
      throw new Error(errorData.message || 'Vehículo no encontrado');
    }

    vehicle = await response.json();
  } catch (error) {
    console.error('Error al buscar vehículo:', error);
    errorMessage = error instanceof Error ? error.message : 'Error al buscar el vehículo';
  }
}
---

<Layout title="Estado del Vehículo">
  <div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
    <div class="relative py-3 sm:max-w-xl sm:mx-auto">
      <div class="relative px-4 py-10 bg-white mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
        <div class="max-w-md mx-auto">
          <div class="divide-y divide-gray-200">
            <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
              <h2 class="text-2xl font-bold mb-8 text-center text-gray-900">Estado de tu Vehículo</h2>
              
              {errorMessage && (
                <div id="errorMessage" class="mt-4 text-red-600 text-center">
                  {errorMessage}
                </div>
              )}

              {vehicle && (
                <div id="searchResult" class="mt-8">
                  <div class="bg-gray-50 p-4 rounded-lg">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Información del Vehículo</h3>
                    <div id="vehicleInfo" class="space-y-2">
                      <p class="text-sm font-medium text-gray-700">Patente: {vehicle.patente}</p>
                      <p class="text-sm font-medium text-gray-700">Marca: {vehicle.marca}</p>
                      <p class="text-sm font-medium text-gray-700">Modelo: {vehicle.modelo}</p>
                      <p class="text-sm font-medium text-gray-700">Estado: 
                        <span class={`px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-${getStatusColor(vehicle.estado)}-100 text-${getStatusColor(vehicle.estado)}-800`}>
                          {vehicle.estado}
                        </span>
                      </p>
                      <p class="text-sm font-medium text-gray-700">Observaciones: {vehicle.observaciones || 'Sin observaciones'}</p>
                      <p class="text-sm font-medium text-gray-700">Cliente: {vehicle.cliente_nombre || 'N/A'}</p>
                    </div>
                  </div>

                  <!-- Galería de fotos -->
                  {vehicle.imagen && (
                    <div id="photoGallery" class="mt-6">
                      <h3 class="text-lg font-medium text-gray-900 mb-4">Fotos del Vehículo</h3>
                      <div id="photos" class="grid grid-cols-2 gap-4">
                        <div class="relative">
                          <img src={vehicle.imagen} alt="Foto del vehículo" class="w-full h-48 object-cover rounded-lg">
                        </div>
                      </div>
                    </div>
                  )}
                </div>
              )}
              
              {!vehicle && !errorMessage && (
                <p class="text-center text-gray-600">Ingresa tu RUT y patente en la página principal para consultar el estado de tu vehículo.</p>
              )}

              <div class="flex justify-center mt-6">
                <a href="/" class="px-4 py-2 text-sm font-medium text-indigo-600 border border-indigo-600 rounded-md shadow-sm hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                  Volver a la página principal
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
